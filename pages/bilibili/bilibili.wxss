Page {
  color: rgb(53, 51, 51);
  padding:10rpx;
}
.nav {
  white-space: nowrap;
  padding: 10rpx
}
.nav_item {
  display:inline-block;
  padding:10rpx 45rpx;
  font-size: 30rpx;
}
.active {
  border-bottom: 4rpx solid rgb(243, 95, 95);
}

.swiper {
  margin-top: 10rpx;
  width:97%;
  height:220rpx;
  padding-left:8rpx;
}
.swiper swiper {
  width: 100%;
  height: 100%;
}
.swiper image {
  width:100%;
  height:100%;
  border-radius: 8rpx;
}

/* 视频列表 */

.video {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: cemter;
}
.video .videoBox {
  width: 48%;
  padding-top:10rpx;
  padding-right: 10rpx;
}
.videoImg {
  width:100%;
  position: relative;
}
.videoImg image {
  width:100%;
  border-radius: 8rpx;
}
.videoImg .playInfo {
  position: absolute;
  left:0;
  bottom:10rpx;
  color:#fff;
  display: flex;
  justify-content: space-around;
  width:98%;
}
.playInfo .play text {
  padding:6rpx;
}

.videoTitle {
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: wrap;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
